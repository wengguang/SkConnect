<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:gravity="center"
    >
 <LinearLayout 
    android:layout_width="150dp"
    android:layout_height="160dp"
    android:orientation="vertical" 
    android:gravity="center"
    android:background="@drawable/myprogress_dialog_bg"
    >
	<ProgressBar style="@android:style/Widget.ProgressBar"
			android:layout_width="130dp" android:layout_height="110dp"
			android:indeterminateDrawable="@drawable/animation1" 
		    android:max="1000"
		    android:layout_marginLeft="13dp"
		    android:layout_marginRight="7dp"
		    android:layout_marginTop="5dp"
		    android:id="@+id/progress"
			/>
	
	 
	<TextView 
	    android:id="@+id/msgText"
	    android:layout_width="130dp"
	    android:layout_height="wrap_content"
	    android:text="拼命加载互联网内容"
	    android:gravity="center"
	    android:textColor="@android:color/white"
	    android:textSize="14sp"
	    android:layout_marginBottom="5dp"
	    />
  </LinearLayout>
</LinearLayout>